<div class ="container">
  <img src="/assets/img/burger.png"> 
  <h1>Eat-da-Burger</h1>
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12">
      <h2>Burgers that need to be devoured!</h2>
        {{#each burgers}}
         {{#unless devoured}}
           <div class="burgerLists">         
            {{this.id}}.   {{this.name}} 
            <button class="change-devour" data-id="{{this.id}}" data-newdevour="{{this.devoured}}">
              Devour it!
            </button>
          </div>            
          {{/unless}}
        {{/each}}
    </div>

    <div class="col-lg-4 col-md-4 col-sm-12" id="burgerForm">
      <h4>Add a burger you wish to eat!</h4>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger:</label>
          <input placeholder="Enter buger name" type="text" id="ca" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div> 

    <div class="col-lg-4 col-md-4 col-sm-12">
      <h2>Burgers that have been devoured!</h2>
      {{#each burgers}}
        {{#if devoured}}
        <div class="burgerLists"> 
        {{this.id}}.   {{this.name}} 
          <button class="delete-burger" data-id="{{this.id}}">
            DELETE!
          </button>
        </div>  
        {{/if}}
      {{/each}}
    </div>
</div>

