<div class ="container">
  <img src="/assets/img/burger.png"> 
  <h1>Eat-da-Burger</h1>
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12">
      <h2>Burgers that need to be devoured!</h2>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
    </div>

    <div class="col-lg-4 col-md-4 col-sm-12" id="burgerForm">

      <h4>Add a burger you wish to eat!</h4>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div> 

    <div class="col-lg-4 col-md-4 col-sm-12">
      <h2>Burgers that have been devoured!</h2>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </div>
  </div>  
</div>

